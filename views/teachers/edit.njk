{% extends 'layout.njk' %}

{% block content %}

    <div class="card">
        
    <section class="avatar"
        style=" background: url({{teacher.avatarUrl}}) no-repeat center center / cover;" >
    </section>
        
    <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
        
            <h3>Edit Teacher</h3>

        {% include 'teachers/fields.njk' %}

        <input type="hidden" name="id" value={{teacher.id}}>
        
        </form>

        <form action="/teachers?_method=DELETE" method="POST">
            <input type="hidden" name="id" value={{teacher.id}}>
            <button id="delete" type="submit">Delete</button>
        </form>

    </section>
    </div>

    

{% endblock content %}
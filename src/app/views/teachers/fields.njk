                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://www."
                    value="{{teacher.avatar_url}}">
                </div>
            </div>
            <div class="item">
                <div>Name</div>
                <div>
                    <input type="text" name="name" placeholder="Teacher's name"
                    value="{{teacher.name}}">
                </div>
            </div>
            <div class="item">
                <div>Birth's date</div>
                <div>
                    <input type="date" name="birth_date"
                    value="{{teacher.birth_date}}">
                </div>
            </div>
            <div class="item">
                <div>Education Level</div>
                <div>
                    <select name="education_level" value="{{teacher.education_level}}">
                        <option value="highSchool" {% if teacher.education == "highSchool" %} selected {% endif %}>High school degree</option>

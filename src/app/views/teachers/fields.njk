                <div>
                    <span><input type="radio" name="class_type" value="classroom" {% if teacher.class_type == 'classroom' %}
                    checked
                    {% endif %}> Classroom teaching</span>
                    <span><input type="radio" name="class_type" value="distance" {% if teacher.class_type == 'distance' %}
                    checked
                    {% endif %}> Distance teaching</span>
                </div>
            </div>
            <div class="item">
                <div>Subjects Taught</div>
                <div>
                    <input type="text" name="subjects_taught" placeholder="Type the subjects separated by commas"

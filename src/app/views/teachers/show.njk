{% extends 'layout.njk' %}

{% block content %}

<div class="card">
    <section 
        class="avatar"
        style=" background: url({{teacher.avatar_url}}) no-repeat center center / cover;">
    </section>
    <section class="details">
        <h3>Information</h3>
        <div class="item">
            <div>Teacher</div>
            <div>{{teacher.name}}</div>
        </div>
        <div class="item">
            <div>Age</div>
            <div>{{teacher.age}}</div>
        </div>
        <div class="item">
            <div>Graduation</div>
            <div>{{teacher.education_level}}</div>
        </div>
        <div class="item">
            <div>Class Type</div>
            <div>{{ "Classroom teaching" if teacher.class_type == 'clasroom' else "Distance teaching"}}</div>
        </div>
        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for subject in teacher.subjects_taught %}
                    <span id="monitoring">{{subject}}</span>
                {% endfor %}
            </div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>

        <a href="/teachers/{{teacher.id}}/edit" id="edit" class="button">Edit</a>
    </section>
</div>
{% endblock content %}